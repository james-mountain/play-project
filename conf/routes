# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /redirectme                 controllers.Application.redirectionToGenericName
GET     /people                     controllers.Application.userConditionalPrint
GET     /people/$name<[a-z]+>       controllers.Application.dynamicPrint(name: String)
GET     /books                      controllers.Application.dynamicPrint(name: String ?= "book")
GET     /ensuredname                controllers.Application.dynamicPrint(name: String = "ensuredname")
GET     /option                     controllers.Application.optionalPrint(option: Option[String])
GET     /authrequest                controllers.Application.authRequest
GET     /logauthreq                 controllers.Application.loggedAuthRequest

GET     /notfound                   controllers.Application.notFoundAction
GET     /badrequest                 controllers.Application.badRequest(requestMessage : Option[String])
GET     /internalerror              controllers.Application.internalServerError
GET     /teapot                     controllers.Application.teapot
GET     /unfinishedpage             controllers.Application.unfinishedPage
GET     /servedrenamed              controllers.Application.serverRenamedFile
GET     /codereviewpdf              controllers.Application.codeReviewPDFWithLength
GET     /comet                      controllers.Application.cometPage
GET     /comet/evens                controllers.Application.cometEvenNumbers

GET     /sameroute                  controllers.Application.firstAction
GET     /sameroute                  controllers.Application.secondAction
GET     /google                     controllers.Default.redirect(to = "http://www.google.com")
GET     /defnotfound                controllers.Default.notFound
GET     /deferror                   controllers.Default.error
GET     /deftodo                    controllers.Default.todo

GET     /getnewcookie               controllers.CookieController.getCookieAction
GET     /showcookie                 controllers.CookieController.printCookieAction
GET     /revokecookie               controllers.CookieController.revokedCookieAction

POST    /addtosession               controllers.SessionController.loginUserToSession
GET     /showsessiondata            controllers.SessionController.printSessionContentsAction
GET     /removefromsession          controllers.SessionController.logoutUserFromSession

GET     /inventoryitems                         controllers.InventoryItemController.listInventoryItems
GET     /inventoryitems/                        controllers.InventoryItemController.listInventoryItems
GET     /inventoryitems/edit/$id<[0-9]+>        controllers.InventoryItemController.startEditInvItem(id : Int)
POST    /inventoryitems                         controllers.InventoryItemController.postFormAction(option: Option[Int])
DELETE  /inventoryitems/$id<[0-9]+>             controllers.InventoryItemController.deleteInvItem(id : Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)