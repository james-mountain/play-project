# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /redirectme                 controllers.Application.redirectionToGenericName
GET     /people/                    controllers.Application.staticprint
GET     /people/$name<[a-z]+>       controllers.Application.print(name: String)
GET     /books                      controllers.Application.print(name: String ?= "book")
GET     /ensuredname                controllers.Application.print(name = "ensuredname")
GET     /option                     controllers.Application.optionalPrint(option: Option[String])

GET     /notfound                   controllers.Application.notFoundAction
GET     /badrequest                 controllers.Application.badRequest
GET     /internalerror              controllers.Application.internalServerError
GET     /teapot                     controllers.Application.teapot
GET     /unfinishedpage             controllers.Application.unfinishedPage

GET     /sameroute                  controllers.Application.firstAction
GET     /sameroute                  controllers.Application.secondAction

GET     /google                     controllers.Default.redirect(to = "http://www.google.com")
GET     /defnotfound                controllers.Default.notFound
GET     /deferror                   controllers.Default.error
GET     /deftodo                    controllers.Default.todo

GET     /getnewcookie               controllers.Application.getCookieAction
GET     /showcookie                 controllers.Application.printCookieAction
GET     /revokecookie               controllers.Application.revokedCookieAction

GET     /addtosession               controllers.Application.addToSessionAction
GET     /showsessiondata            controllers.Application.printSessionContentsAction
GET     /removefromsession          controllers.Application.removeFromSessionAction

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)